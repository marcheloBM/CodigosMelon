<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Campo Código -->
    <EditText
        android:id="@+id/etCodigo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/codigo"
        android:inputType="text"
        android:autofillHints="name"
        android:layout_marginBottom="8dp"/>

    <!-- Campo Nombre -->
    <EditText
        android:id="@+id/etNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/nombre"
        android:inputType="textMultiLine"
        android:minLines="3"
        android:maxLines="10"
        android:gravity="top"
        android:textColor="@android:color/black"
        android:background="@android:color/white"
        android:autofillHints="name"
        android:padding="8dp" />

    <!-- Botón Insertar -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnInsertar"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/insertar"
        app:cornerRadius="12dp"
        app:backgroundTint="@color/purple_500"
        android:layout_marginBottom="8dp"/>

    <!-- SearchView -->
    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="Buscar por código o nombre"
        android:iconifiedByDefault="false"
        android:layout_marginBottom="16dp"/>

    <!-- Botón Editar -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEditar"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/editar"
        app:cornerRadius="12dp"
        app:backgroundTint="@color/purple_700"
        android:layout_marginBottom="8dp"/>

    <!-- Botón Eliminar -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEliminar"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/eliminar"
        app:cornerRadius="12dp"
        app:backgroundTint="@color/teal_200"
        android:layout_marginBottom="16dp"/>

    <!-- Vista vacía (mensaje + ícono) -->
    <LinearLayout
        android:id="@+id/emptyView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/imgEmpty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_empty_box"
            android:contentDescription="@string/Sin_resultados"
            app:tint="@android:color/darker_gray"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvEmpty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/No_encontraron_resultados"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            android:gravity="center"
            app:drawableTopCompat="@drawable/ic_empty_box"
            android:drawablePadding="8dp"
            android:padding="16dp"
            android:visibility="gone"/>
    </LinearLayout>

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvProductos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>